@page "/bookings/"
@inject HttpClient _client
@inject IJSRuntime js
@attribute [Authorize]
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HealthVigil Dashboard</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background: #f0f0f0;
        }

        main {
            text-align: center;
            margin: 40px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .dashboard {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .dashboard-item {
            width: 150px;
            height: 150px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }

        .warning {
            background-color: #ff5722;
        }

        .appointments {
            background-color: #2196f3;
        }

        .messages {
            background-color: #e91e63;
        }

        .dashboard-item span {
            text-align: center;
        }
    </style>
</head>
<body>
    <main>
        <h1>Hello Doctor</h1>
        <div class="dashboard">
            <div class="dashboard-item warning">
                <span>Warning</span>
            </div>
            <div class="dashboard-item appointments">
                <span>You have no Appointment</span>
            </div>
            <div class="dashboard-item messages">
                <span>Contact your Patient</span>
            </div>
        </div>
    </main>
</body>
</html>
