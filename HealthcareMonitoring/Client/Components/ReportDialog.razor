<ValidateForm Model="_report" OnValidSubmit="OnSubmit">
    <div class="row g-3 form-inline">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.heartRate"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.rhythm"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.P_wave"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.PR_Interval"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.QRS_Complex"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.QT_Interval"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.ST_Interval"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.T_Wave"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.hb"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.hct"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.rbc"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.wbc"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.plt"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.lumarSpine"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.totalHip"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.tscoreL"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.tscoreH"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.fvc"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.fev1"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.fev1_fvc_ratio"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.pef"></BootstrapInput>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <BootstrapInput @bind-Value="_report.tv"></BootstrapInput>
        </div>
        <div class="col-12">
            <Textarea @bind-Value="_report.MedicalType" rows="3"></Textarea>
        </div>
    </div>
    <div class="form-footer">
        <DialogCloseButton Text="Cancel"></DialogCloseButton>
        <Button ButtonType="ButtonType.Submit" Text="Submit"></Button>
    </div>
</ValidateForm>


